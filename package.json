{
  "name": "jsaf",
  "version": "0.0.1",
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "**/neo4j-graphql-js",
      "**/neo4j-graphql-js/**"
    ]
  },
  "description": "Javascript AF monorepo",
  "main": "index.js",
  "author": "Harshit Pant",
  "license": "GPLv3",
  "private": true,
  "scripts": {
    "dev": "npm-run-all -p --print-label ui:dev api:dev",
    "ui:dev": "cd packages/web && yarn run dev",
    "api:dev": "cd packages/server && yarn run dev",
    "cm": "commit"
  },
  "devDependencies": {
    "@commitlint/cli": "^7.0.0",
    "@commitlint/config-conventional": "^7.0.1",
    "@commitlint/prompt-cli": "^7.0.0",
    "husky": "^1.0.0-rc.13",
    "lerna": "^2.11.0",
    "npm-run-all": "^4.1.3",
    "prettier": "^1.13.7",
    "tslint": "^5.10.0",
    "tslint-config-prettier": "^1.13.0",
    "tslint-react": "^3.6.0"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint --env HUSKY_GIT_PARAMS"
    }
  }
}
