{
  "name": "@jsaf/controller",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "scripts": {
    "build": "rimraf ./dist && tsc",
    "introspect": "apollo-codegen introspect-schema http://localhost:8080/graphql --output schema.json",
    "generate": "apollo-codegen generate src/**/*.tsx --schema schema.json --target ts-modern --output src/operation-result-types.ts",
    "gen-types": "npm run introspect && npm run generate"
  },
  "version": "0.0.1",
  "description": "Reusable react controllers",
  "license": "MIT",
  "dependencies": {
    "graphql": "^0.13.2",
    "graphql-tag": "^2.9.2",
    "react": "^16.4.1",
    "react-apollo": "^2.1.8",
    "react-dom": "^16.4.1"
  },
  "devDependencies": {
    "@types/node": "^10.5.1",
    "@types/react": "^16.4.6",
    "@types/react-dom": "^16.0.6",
    "apollo-codegen": "^0.20.2",
    "rimraf": "^2.6.2",
    "tslint": "^5.10.0",
    "tslint-config-prettier": "^1.13.0",
    "typescript": "^2.9.2"
  }
}
