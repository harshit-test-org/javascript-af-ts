{
  "name": "server",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "dev": "ts-node-dev --transpileOnly --respawn src/server.ts",
    "build": "rimraf dist && tsc",
    "test": "jest"
  },
  "dependencies": {
    "apollo-server": "^2.0.0-rc.3",
    "express": "^4.16.3",
    "graphql": "^14.0.0-rc.2",
    "neo4j-driver": "^1.6.1",
    "neo4j-graphql-js": "^0.1.23",
    "uuid": "^3.2.1"
  },
  "devDependencies": {
    "@types/express": "^4.16.0",
    "@types/jest": "^23.1.1",
    "@types/node": "^10.3.5",
    "graphql-request": "^1.6.0",
    "jest": "^23.1.0",
    "rimraf": "^2.6.2",
    "ts-jest": "^22.4.6",
    "ts-node-dev": "^1.0.0-pre.26",
    "typescript": "^2.9.2"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "collectCoverage": true
  }
}
