    "test": "jest"
  },
  "dependencies": {
    "apollo-server-express": "^2.0.0",
    "connect-redis": "^3.3.3",
    "cors": "^2.8.4",
    "dotenv": "^6.0.0",
    "express": "^4.16.3",
    "express-session": "^1.15.6",
    "graphql": "^14.0.0-rc.2",
    "ioredis": "^3.2.2",
    "lodash": "^4.17.10",
    "neo4j-driver": "^1.6.2",
    "neo4j-graphql-js": "^0.1.29",
    "passport": "^0.4.0",
    "passport-github2": "^0.1.11",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "@types/connect-redis": "^0.0.7",
    "@types/cors": "^2.8.4",
    "@types/dotenv": "^4.0.3",
    "@types/express": "^4.16.0",
    "@types/express-session": "^1.15.10",
    "@types/ioredis": "^3.2.13",
    "@types/jest": "^23.3.1",
    "@types/lodash": "^4.14.115",
    "@types/node": "^10.5.4",
    "@types/passport": "^0.4.6",
    "@types/passport-github2": "^1.2.0",
    "@types/uuid": "^3.4.3",
    "graphql-request": "^1.7.0",
    "jest": "^23.4.2",
    "rimraf": "^2.6.2",
    "ts-jest": "^23.0.1",
    "ts-node-dev": "^1.0.0-pre.26",
    "typescript": "^2.9.2"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "collectCoverage": true
  }
}
